{
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"headers": [
			{
				"source": "**/*.@(js|css|webp|png|jpg|jpeg|gif|svg|woff2|woff|ttf|otf|ico)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					},
					{
						"key": "Access-Control-Allow-Origin",
						"value": "*"
					}
				]
			},
			{
				"source": "/geo/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			},
			{
				"source": "/fonts/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					},
					{
						"key": "Access-Control-Allow-Origin",
						"value": "*"
					}
				]
			},
			{
				"source": "**/*.@(html|json)",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=3600"
					}
				]
			},
			{
				"source": "/rss.xml",
				"headers": [
					{
						"key": "Content-Type",
						"value": "application/xml"
					},
					{
						"key": "Cache-Control",
						"value": "public, max-age=1800"
					}
				]
			},
			{
				"source": "/sitemap.xml",
				"headers": [
					{
						"key": "Content-Type",
						"value": "application/xml"
					},
					{
						"key": "Cache-Control",
						"value": "public, max-age=86400"
					}
				]
			},
			{
				"source": "/_app/immutable/**",
				"headers": [
					{
						"key": "Cache-Control",
						"value": "public, max-age=31536000, immutable"
					}
				]
			}
		],
		"redirects": [
			{
				"source": "/resume.html",
				"destination": "/resume",
				"type": 301
			},
			{
				"source": "/blog.html",
				"destination": "/blog",
				"type": 301
			},
			{
				"source": "/resume/",
				"destination": "/resume",
				"type": 301
			},
			{
				"source": "/blog/",
				"destination": "/blog",
				"type": 301
			}
		],
		"rewrites": [
			{
				"source": "**",
				"destination": "/200.html"
			}
		],
		"cleanUrls": true,
		"trailingSlash": false
	}
}
